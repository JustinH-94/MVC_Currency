@model Basic_MVC.Models.IPokemon

@{ 
    ViewData["Title"] = "Add";
}

<h2>Add</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="AttackMove" class="control-label"></label>
                <input asp-for="AttackMove" class="form-control" />
                <span asp-validation-for="AttackMove" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Return To List</a>
</div>